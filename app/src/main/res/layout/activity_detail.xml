<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:id="@+id/main"
    tools:context=".DetailActivity"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp">

        <ImageView
            android:id="@+id/imgDetail"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"/>

        <ImageView
            android:id="@+id/btnBack3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/back"
            android:padding="4dp"
            android:layout_marginBottom="2dp" />

        <TextView
            android:id="@+id/tvJudul"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Judul Wisata"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvKuota"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sisa Slot: 0"
            android:textColor="#E91E63"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:text="Pilih Tanggal"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spinnerTanggal"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="12dp" />

        <TextView
            android:text="Pilih Jam"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Spinner
            android:id="@+id/spinnerJam"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Deskripsi lengkap akan muncul di sini secara dinamis dari database."
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lanjut ke Pemesanan"
            android:backgroundTint="#4CAF50"/>
    </LinearLayout>
</ScrollView>